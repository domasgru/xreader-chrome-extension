{
  "manifest_version": 3,
  "name": "XReader",
  "version": "1.0.0",
  "action": {
    "default_title": "Open XReader",
    "default_icon": "xreader.png"
  },
  "background": {
    "service_worker": "background.ts"
  },
  "permissions": [
    "scripting"
  ],
  "host_permissions": [
    "https://x.com/*",
    "https://twitter.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://x.com/*",
        "https://twitter.com/*"
      ],
      "js": [
        "src/main.tsx"
      ]
    }
  ]
}